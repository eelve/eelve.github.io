.header {
  margin: 0 auto;
  position: relative;
  width: $content-desktop;

  +desktop-large() {
    width: $content-desktop-large;
  }

  +desktop-largest() {
    width: $content-desktop-largest;
  }

  +tablet-mobile() {
    width: auto;
  }
}

.header-inner {
  background: white;
  opacity: 0.8;
  border-radius: $border-radius-inner;
  box-shadow: $box-shadow-inner;
  overflow: hidden;
  padding: 0;
  position: absolute;
  top: 0;
  width: $sidebar-desktop;

  +desktop-large() {
    .container & {
      width: $sidebar-desktop;
    }
  }

  +tablet-mobile() {
    border-radius: initial;
    position: relative;
    width: auto;
  }
}

.main {
  clearfix();
}

.container .main-inner {
  +tablet-mobile() {
    width: auto;
  }
}

.content-wrap {
  background: white;
  opacity: 0.8;
  border-radius: $border-radius-inner;
  box-shadow: $box-shadow-inner;
  box-sizing: border-box;
  float: right;
  min-height: 700px;
  padding: $content-desktop-padding;
  width: $content-wrap;

  +tablet() {
    border-radius: initial;
    padding: 20px;
    width: 100%;
  }

  +mobile() {
    border-radius: initial;
    min-height: auto;
    padding: 20px;
    width: 100%;
  }
}

.sidebar {
  background: $body-bg-color;
  opacity: 0.8;
  box-shadow: none;
  float: left;
  margin-left: -100%;
  position: static;
  width: $sidebar-desktop;

  +tablet-mobile() {
    display: none;
  }
}

.sidebar-toggle {
  display: none;
}

.footer-inner {
  padding-left: 260px;

  +tablet-mobile() {
    padding-left: 0 !important;
    padding-right: 0 !important;
    width: auto;
  }
}

.sidebar-position-right {
  .header-inner {
    right: 0;
  }

  .content-wrap {
    float: left;
  }

  .sidebar {
    float: right;
  }

  .footer-inner {
    padding-left: 0;
    padding-right: 260px;
  }
}

@media screen and (min-width:1200px) {

  body {
    background-image:url(/images/background.jpg);
    background-repeat: no-repeat;
    background-attachment:fixed;
    background-position:50% 50%;
  }

  #footer a {
    color:#eee;
  }
}
